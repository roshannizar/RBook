<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.roshannizar.rbook">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignIn" />
        <activity
            android:name=".Dashboard"
            android:label="@string/title_activity_dash"
            android:theme="@style/AppTheme" />
        <activity android:name=".SignUp" />
        <activity android:name=".MyBooks" />
        <activity android:name=".SelectionPart" />
        <activity android:name=".ForgotPassword" />
        <activity
            android:name=".ViewBooks"
            android:label="@string/title_activity_view_books"
            android:theme="@style/AppTheme" />
        <activity android:name=".ViewBook" />
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme" />
        <activity android:name=".AddBook" />
        <activity android:name=".Selector" />
        <activity android:name=".CheckAvailability" />
        <activity android:name=".Copies" />
        <activity android:name=".BookDetails" />
        <activity android:name=".ReservationView"></activity>
    </application>

</manifest>